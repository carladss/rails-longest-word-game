<h1>New Game</h1>
<div class="letters">
  <% @letters.each do |letter| %>
    <p id="card-letter"><%= letter %></p>
  <% end %>
</div>

<div class="form-group">
  <p>What is the longest word you can find ?</p>
  <form action="/score" method="post">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <%= hidden_field_tag 'letters_list', "#{@letters}" %>
    <input type="text" name="word" id="form-input">
    <input type="submit" value="Ask!" class= "btn-success" id="btn-ask">
  </form>
</div>
